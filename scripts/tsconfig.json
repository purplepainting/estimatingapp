{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["../scripts", "../lib"],
  "exclude": ["../node_modules"]
} 